<%= f.association :menu, input_html: { data: { menu_item_id: f.object.spree_menu_id } } %>

<%= f.input :parent_id,
  collection: Spree::MenuItem.where(menu_id: f.object.spree_menu_id).arrange_as_array({order: 'slug'}, f.object.possible_parents),
  include_blank: '- None (root) -'
%>

<%= f.input :title %>
<%= f.input :slug, hint: 'leave blank to auto-populate from title' %>
<%= f.input :cached_slug, input_html: { disabled: 'disabled' } %>
<%= f.input :is_published %>
<%= f.input :is_visible_in_menu %>

<%= field_set_tag "CSS" do %>
  <%= f.input :css_class %>
  <%= f.input :css_id %>
<% end %>
