<%
context ||= :table_row
case context
when :table_row
%>
<tr>
  <td class="align-center"><%= image_tag(object.file.thumb('120x120').url, alt: object.alt) if object.file_uid? %></td>
  <td class="align-center"><%= object.name %></td>
  <td class="align-center"><%= object.alt %></td>
  <td class="actions" data-hook="admin_<%= controller_name %>_index_row_actions">
    <%= link_to_edit object, no_text: true, class: 'edit' %>
    &nbsp;
    <%= link_to_delete object, no_text: true %>
  </td>
</tr>
<%
when :find_or_create
%>
<li class="clearfix<%= ' with-image' if object.file_uid? %> <%= cycle 'even', 'odd' %>">
  <%= image_tag(object.file.thumb('120x120').url, alt: object.alt) if object.file_uid? %>
  <div>
    <%= object.name %> - original size: <%= object.file.width %>x<%= object.file.height %>px
    <%= link_to "Select", "#", rel: object.id %>
  </div>
</li>
<%
end
%>
